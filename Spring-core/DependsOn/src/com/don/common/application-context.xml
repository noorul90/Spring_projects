<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="cityRiPropsFileAccesor" class="com.don.accesor.CityRiPropsFileAccesor">
		<property name="key" value="city_ri" />
	</bean>

	<bean id="cacheManager" class="com.don.util.CacheManager">
		<constructor-arg ref="cache" />
		<constructor-arg>
			<list value-type="com.don.accesor.IAccesor">
				<ref bean="cityRiPropsFileAccesor" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="cache" class="com.don.util.Cache" factory-method="getInstance" />
	
	<bean id="loanCalculator" class="com.don.beans.LoanCalculator" depends-on="cacheManager">
		<property name="cache" ref="cache" />
	</bean>

</beans>
